# -*-conf-*-

[general]
accounts = Primary, Olin, Wellesley
pythonfile = ~/dotfiles/nostow/offlineimap.py
maxsyncaccounts=3

[Account Primary]
localrepository = PrimaryLocal
remoterepository = PrimaryRemote
autorefresh=5

[Account Olin]
localrepository = OlinLocal
remoterepository = OlinRemote
autorefresh=5

[Account Wellesley]
localrepository = WellesleyLocal
remoterepository = WellesleyRemote
autorefresh=5

[Repository PrimaryLocal]
type = Maildir
localfolders = ~/Maildir/Primary

[Repository OlinLocal]
type = Maildir
localfolders = ~/Maildir/Olin

[Repository WellesleyLocal]
type = Maildir
localfolders = ~/Maildir/Wellesley

[Repository PrimaryRemote]
type = IMAP
remotehost = imap.gmail.com
remoteuser = concavemail@gmail.com
remotepasseval = get_pw_from_desc("Password for concavemail@gmail.com")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository OlinRemote]
type=IMAP
remotehost = outlook.office365.com
remoteuser = knikomborirak@olin.edu
remotepasseval = get_pw_from_desc("Password for knikomborirak@olin.edu")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository WellesleyRemote]
