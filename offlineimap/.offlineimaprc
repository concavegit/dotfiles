# -*-conf-*-
[general]
accounts = ConcaveMail
pythonfile = ~/dotfiles/nostow/offlineimap.py

[Account ConcaveMail]
localrepository = ConcaveMailLocal
remoterepository = ConcaveMailRemote
autorefresh=15

[Repository ConcaveMailLocal]
type = Maildir
localfolders = ~/Maildir

[Repository ConcaveMailRemote]
type = IMAP
remotehost = imap.gmail.com
remoteusereval = get_username("ConcaveMail")
remotepasseval = get_password("ConcaveMail")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt