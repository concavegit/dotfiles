" StatusLine settings
hi StatusLine           color: #ffffff; background: #1d1f21;

" CmdLine settings excluding Gradient
hi Normal               color: #969896; background: #1d1f21;
hi CmdLine              background: #1d1f21; color: #969896; font-size: 9pt;
hi CompDesc             color: #c6c6c6; width: 50%; font-size: 9pt;
hi CompIcon             width: 16px; min-width: 16px; display: inline-block; margin-right: .5ex;
hi CompItem[selected]   background: #969896; color: #969896; 
hi CompMsg              font-style: italic; margin-left: 16px;
hi CompResult           width: 45%; overflow: hidden;font-size: 10pt; font-family: monospace; font-weight: normal;
hi CompTitle            color: #969896; background: #1d1f21; font-weight: bold;
hi CompTitle>*          padding: 0 .5ex;
hi Filter               font-weight: bold;color: #969896;

"Used with ]f and [f
hi FrameIndicator       background-color: #1d1f21; opacity: 0.5; z-index: 999; position: fixed; top: 0; bottom: 0; left: 0; right: 0;

hi Bell                 border: 0 none; background-color: #1d1f21;
hi ErrorMsg             color: #ffffff; background: #cc6666; font-weight: bold;


"Hint section
"hi Hint                 font-family: Sans; font-size: 10px; font-weight: bold; color: #c5c8c6; background-color: #cc6666; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding 0px 1px 0px 1px;
hi Hint               	font-family: monospace; font-size: 11px; font-weight: bold; color: #ffffff; background-color: #1d1f21; border: solid 1px #c5c8c6;
hi Hint::after          content: attr(number);
hi HintActive           background: #81a2be; color: #c5c8c6;
hi HintElem             background-color: #1d1f21; color: #c5c8c6;

